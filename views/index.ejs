                    </div>
                </form>
                <table class="table">
                    <thead>
                        <tr>
                            <th>航班号</th>
                            <th>日期</th>
                            <th>星期</th>
                            <th>行程</th>
                            <th>起飞</th>
                            <th>到达</th>
                            <th>机型</th>
                            <th>飞行时长</th>
                        </tr>
                    </thead>
                    <tbody id="list">

                    </tbody>
                </table>
                <button type="button" onclick="test()" class="btn btn-success">
                    复制到Excel
                </button>
            </div>
        </div>
    </div>
